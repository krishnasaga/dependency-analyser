{
    "compilerOptions": {
      "module": "CommonJS",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "ESNext",
      "sourceMap": true,
      "outDir": "dist",
      "lib": [
        "es6"
      ]
    },
    "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
    ]
}
